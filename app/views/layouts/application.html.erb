<!DOCTYPE html>
<html>
	<head>
	  <title><%= full_title(yield(:title)) %></title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  <%= render 'layouts/shim' %>
	</head>
	<body>
		<div id="wrapper" class="clearFix">
			<%= render 'layouts/header' %>
			<%= yield %>
		</div>

		<%= render 'layouts/footer' %>

	</body>
</html>
